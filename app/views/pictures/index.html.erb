<div class="container-fluid">
  <div class="row">

    <!-- タイムライン表示画面 -->
    <div class="col-md-9">
      <h4>投稿一覧</h4>
      <!-- つぶやき一覧を表示する -->
      <div class="row row-eq-height">
      <div class = "pictures">
        <% @pictures.each {|picture| %>
          <div class="col-md-4">
          <div class="picture">
            <div class="picture-data clearfix">
              <div class="profile-img">
                <img src="<%=picture.user.image%>" alt="">
              </div>
              <span class="picture-title"><%= picture.user.name %></span>
              <span class="create-date"><%= picture.created_at.strftime("%Y年%m月%d日") %></span>
            </div>
            <div class="picture-content">
              <p>タイトル : <%= picture.title %></p>
              <p>内容: <%= picture.content %></p>
            </div>
              <div class="picture-img">
                <% if picture.image && picture.image.url %>
                <img src="<%=picture.image%>" alt="">
                <% else %>
                <%= image_tag('no_image.png') %>
                <% end %>
              </div>
            <div class="picture-edit clearfix">
              <%= link_to '詳細', picture_path(picture.id) %>
              <% if picture.user.id == current_user.id %>
                <%= link_to '編集', edit_picture_path(picture.id),data: { confirm: '本当に編集していいですか？' }  %>
                <%= link_to '削除', picture_path(picture.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
              <% end %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    </div>

    <!-- 友達リスト表示 -->
    <div class="col-md-2">
      <h4>友達リスト</h4>
      <div class="sidemenu">
      </div>
    </div>
  </div>
</div>
